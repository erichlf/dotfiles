# top-most EditorConfig file
root = true

[*]
end_of_line = lf
char_set = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 80

[.pentadactylrc]
trim_trailing_whitespace = false

[*.{c,C}]
indent_size = 2
tab_width = 2

[*.tex]
indent_size = 2
tab_width = 2

[compile,*.mk,Makefile]
indent_style = tab
